<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.loong.modules.system.dao.UserDao">
    <select id="getAll" resultType="com.loong.modules.system.entity.User">
        select *
        from sys_user
        where del_flag=0
    </select>

    <select id="getUserByLoginName"
            resultType="user">

        select *
        from sys_user
        where username=#{loginName}
    </select>

    <select id="getUserById"
            parameterType="com.loong.modules.system.entity.User"
            resultType="com.loong.modules.system.entity.User">

        select *
        from sys_user
        where id=#{id}
    </select>


    <update id="updatePwd" parameterType="user">

        update sys_user
        set password =#{password}
        where username=#{username}
    </update>

    <insert id="addUser"
            parameterType="user">

        insert into sys_user(id,username,password,del_flag)
        values (#{id},#{username},#{password},#{del_flag})
    </insert>

    <delete id="deleteById"
            parameterType="com.loong.modules.system.entity.User">

        delete from sys_user
        where id=#{id}
    </delete>

    <insert id="insertUserRole"
            parameterType="com.loong.modules.system.entity.User">

        insert into sys_user_role(user_id,role_id)
        values
        <foreach collection="roleList" item="item" separator=",">
            (#{id},#{item.id})
        </foreach>
    </insert>

    <update id="update" parameterType="com.loong.modules.system.entity.User">
        update sys_user
        set username=#{username}
        where id=#{id}
    </update>
</mapper>