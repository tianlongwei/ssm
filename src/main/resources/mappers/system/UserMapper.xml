<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.loong.modules.system.dao.UserDao">
    <select id="getAll" resultType="com.loong.modules.system.entity.User">
        select * from sys_user
    </select>

    <select id="getUserByLoginName" resultType="user">
        select * from sys_user where username=#{loginName}
    </select>
    <update id="updatePwd" parameterType="user">
        update sys_user set password =#{password} where username=#{username}
    </update>
    <insert id="addUser" parameterType="user">
        insert into sys_user(username,password) values (#{username},#{password})
    </insert>
</mapper>